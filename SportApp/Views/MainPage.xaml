                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <Border Grid.Row="0"
                        Stroke="#161833"
                        StrokeThickness="2"
                        StrokeShape="RoundRectangle 17,17,17,17"
                        Background="#161833"
                        Margin="20, 10, 20, 10">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>
                        <Label Grid.Row="0"
                               Margin="20"
                               HorizontalTextAlignment="Start"
                               Text="Новичек"
                               TextColor="White"
                               FontFamily="Montserrat-Bold"
                               FontSize="25"/>
