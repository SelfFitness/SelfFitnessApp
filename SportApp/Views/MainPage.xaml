                                Margin="10"
                                BackgroundColor="#181B3F"
                                StrokeShape="RoundRectangle 25,25,25,25">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2.5*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Label Text="Продвинутый-1"
                                       Grid.Column="0"
                                       Margin="20"
                                       HorizontalTextAlignment="Start"
                                       FontSize="20"/>
