                                           WidthRequest="20"/>
                                    <Image Source="thingray.png"
                                           WidthRequest="20"/>
                                </HorizontalStackLayout>
                            </Grid>
                        </Border>
                        <Border Grid.Row="3"
                                Margin="10"
                                BackgroundColor="#181B3F"
                                StrokeShape="RoundRectangle 25,25,25,25">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2.5*"/>
                                    <ColumnDefinition Width="*"/>
